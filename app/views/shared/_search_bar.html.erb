<div class="flex min-h-full items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
  <div class="w-full max-w-md space-y-8">
    <%= form_with(model: weather_report, url: weather_reports_path, method: :post) do |form| %>
      <% if weather_report.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(weather_report.errors.count, "error") %> prohibited this search to be fulfilled</h2>

          <ul>
          <% weather_report.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <%= form.label :iata_code, class: "mb-2 text-sm font-medium text-gray-900 sr-only" %>
      <div class="relative">
        <div class="absolute inset-y-0 left-0 flex items-center pl-3 pointer-events-none">
          <svg aria-hidden="true" class="w-5 h-5 text-gray-500 " fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path></svg>
        </div>
        <%= form.text_field :iata_code, class: "block w-full p-4 pl-10 text-sm text-gray-900 border border-gray-300 rounded-lg bg-gray-50 focus:ring-blue-500 focus:border-blue-50", required: true, maxlength: 3, placeholder: "Enter iata code" %>
        <button type="submit" class="text-white absolute right-2.5 bottom-2.5 bg-sky-800 hover:bg-sky-900 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-4 py-2">Search</button>
      </div>
    <% end %>
  </div>
</div>
